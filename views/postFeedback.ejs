<%-include("partials/header");-%>
<body class="mainpage" style="height: 100vh; display: flex; flex-direction: column; justify-content: center; align-items: center;">
    <link rel="stylesheet" href="/css/styles.css" type="text/css">
    <h1>Welcome to LMS</h1>

    <form action="/login" method="POST">
        <div class="form-outline mb-4">
            <h3>User ID</h3>
            <input  class="form-control" type="text" placeholder="User" name="userID">
        </div>
        <div class="form-outline mb-4">
            <h3>Course ID</h3>
            <input  class="form-control" type="text" placeholder="Course" name="courseID">
        </div>
        <div>
            <h3>Year Offered</h3>
            <input type="number" placeholder="Year Offered" name="year">
        </div>

        <br><br>
        <div>
            <h3>Semester</h3>
            <!-- <input type="text" placeholder="Credit Hours" name="credit_hrs"> -->

            <div class="form-check form-check-inline lead">
                <input type="radio" class="form-check-input" id="radio1" name="sem" value="fall" required>
                <label class="form-check-label-lg lead" for="radio1">Fall</label>
            </div>

            <div class="form-check form-check-inline mx-4 mb-3 mb-lg-4 lead">
                <input type="radio" class="form-check-input" id="radio2" name="sem" value="spring" checked/>
                <label class="form-check-label-lg lead" for="radio2">Spring</label>
            </div>
            
        </div>
        <div>
            <h3>Score</h3>
            <input type="number" step="0.01" placeholder="Score" name="score">
        </div>
        <br><br>
        <button type="submit">Release Score</button>    
        <br>
    </form>
    <br><br>
    <h5><%=message%></h5>
    <!-- <<script src="/js/index.js"></script> -->
</body>
</html>